<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:ComputerServiceManager.ViewModels"
             mc:Ignorable="d"
             d:DesignWidth="800" d:DesignHeight="450"
             x:Class="ComputerServiceManager.Views.SalesPageView"
             x:DataType="vm:SalesPageViewModel">

  <UserControl.Styles>
    <Style Selector="TextBlock.bold">
      <Setter Property="FontWeight" Value="Bold"/>
    </Style>
    <Style Selector="TextBlock.white">
      <Setter Property="Foreground" Value="White"/>
    </Style>
    <Style Selector="ListBoxItem:pointerover /template/ ContentPresenter">
      <Setter Property="Background" Value="#EEE" />
      <Setter Property="CornerRadius" Value="10" />
      <Setter Property="Cursor" Value="Hand" />
    </Style>
    <Style Selector="ListBoxItem:selected /template/ ContentPresenter">
      <Setter Property="Background" Value="#FFF" />
      <Setter Property="CornerRadius" Value="10" />
    </Style>
    <Style Selector="Border.shadow:pointerover">
      <Setter Property="BoxShadow" Value="0 0 10 white" />
    </Style>
    <Style Selector="TextBox.searchBox">
      <Setter Property="FontSize" Value="14"/>
      <Setter Property="Padding" Value="6"/>
      <Setter Property="BorderBrush" Value="#DDD"/>
      <Setter Property="BorderThickness" Value="1"/>
      <Setter Property="CornerRadius" Value="6"/>
      <Setter Property="Background" Value="White"/>
      <Setter Property="Foreground" Value="Black"/>
      <Setter Property="HorizontalAlignment" Value="Stretch"/>
      <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>
  </UserControl.Styles>

  <Grid RowDefinitions="Auto, *" ColumnDefinitions="*,*">
    <Border Grid.Row="1" Grid.Column="0" Padding="10" Background="#333">
      <Grid RowDefinitions="Auto, *, Auto">
        <TextBlock Text="Invoice Items"
                   FontSize="16"
                   FontWeight="SemiBold"
                   Grid.Row="0"
                   Margin="0,0,0,6"
                   Classes="bold white"/>

        <ScrollViewer Grid.Row="1">
          <ListBox ItemsSource="{Binding InvoiceItems}"
                   SelectedItem="{Binding SelectedInvoiceItem}"
                   Background="Transparent"
                   HorizontalAlignment="Stretch"
                   VerticalAlignment="Stretch">
            <ListBox.ItemTemplate>
              <DataTemplate>
                <Border Classes="shadow"
                        CornerRadius="4"
                        Padding="12"
                        Background="#FFF"
                        Margin="0,0,0,6">
                  <Grid ColumnDefinitions="2*, 1*, 1.2*, 1.2*"
                        VerticalAlignment="Center">

                    <TextBlock Text="{Binding Name}"
                               FontWeight="SemiBold"
                               Grid.Column="0"
                               VerticalAlignment="Center"
                               TextWrapping="Wrap"
                               TextTrimming="CharacterEllipsis"/>
                    
                    <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                      <TextBlock Text="Quantity:"
                                 FontSize="12"
                                 Foreground="Gray"
                                 TextAlignment="Center"/>
                      <TextBlock Text="{Binding Quantity}"
                                 FontWeight="Bold"
                                 FontSize="14"
                                 TextAlignment="Center"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Column="2" HorizontalAlignment="Right" Margin="0,0,10,0">
                      <TextBlock Text="Net:"
                                 FontSize="12"
                                 Foreground="Gray"
                                 TextAlignment="Right"/>
                      <TextBlock Text="{Binding LineNet, StringFormat=0.00}"
                                 FontWeight="Bold"
                                 FontSize="14"
                                 TextAlignment="Right"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Column="3" HorizontalAlignment="Right">
                      <TextBlock Text="Gross:"
                                 FontSize="12"
                                 Foreground="Gray"
                                 TextAlignment="Right"/>
                      <TextBlock Text="{Binding LineGross, StringFormat=0.00}"
                                 FontWeight="Bold"
                                 FontSize="14"
                                 TextAlignment="Right"/>
                    </StackPanel>
                  </Grid>
                </Border>
              </DataTemplate>
            </ListBox.ItemTemplate>
          </ListBox>
        </ScrollViewer>

        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    VerticalAlignment="Center"
                    Spacing="10"
                    Margin="0,6,0,0">
          <Button Command="{Binding GenerateBillCommand}" Background="White">Generate Bill</Button>
          <Button Command="{Binding RemoveInvoiceItemCommand}" Background="White">Cancel</Button>
          <TextBlock Text="Total Net:" Classes="bold white"/>
          <TextBlock Text="{Binding TotalNet, StringFormat=0.00}" FontWeight="Bold" Classes="bold white"/>
          <TextBlock Text="VAT 23%:" Classes="bold white"/>
          <TextBlock Text="{Binding TotalVat, StringFormat=0.00}" FontWeight="Bold" Classes="bold white"/>
          <TextBlock Text="Total Gross:" Classes="bold white"/>
          <TextBlock Text="{Binding TotalGross, StringFormat=0.00}" FontWeight="Bold" Classes="bold white"/>
        </StackPanel>
      </Grid>
    </Border>

    <Border Grid.Row="1" Grid.Column="1" Background="#FC5130" CornerRadius="5 0 0 5" Padding="10">
      <Grid RowDefinitions="Auto, *, Auto">
        <StackPanel Grid.Row="0" Margin="0,0,0,10">
          <TextBlock Text="Available Services"
                     FontSize="16"
                     FontWeight="SemiBold"
                     Classes="bold white"
                     Margin="0,0,0,6"/>

          <Grid>
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="*" />
              <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <TextBox Grid.Column="0"
                     Watermark="Search service..."
                     Text="{Binding ServiceSearchText, UpdateSourceTrigger=PropertyChanged}"
                     Height="32"
                     Classes="searchBox"/>

            <Button Grid.Column="1"
                    Content="Clear"
                    Height="32"
                    Margin="6,0,0,0"
                    Background="#FFF"
                    Command="{Binding ClearSearchCommand}"/>
          </Grid>
        </StackPanel>

        <ScrollViewer Grid.Row="1">
          <ListBox ItemsSource="{Binding AvailableServiceTypes}"
                   SelectedItem="{Binding SelectedServiceType}"
                   Background="Transparent"
                   HorizontalAlignment="Stretch"
                   VerticalAlignment="Stretch">
            <ListBox.ItemTemplate>
              <DataTemplate>
                <Border CornerRadius="4"
                        Background="#FFF"
                        Classes="shadow"
                        Margin="0,0,0,3"
                        Padding="10">
                  <Grid ColumnDefinitions="*, Auto" MaxHeight="80">
                    <StackPanel Grid.Column="0" VerticalAlignment="Center">
                      <TextBlock Text="{Binding Name}"
                                 Classes="bold"
                                 HorizontalAlignment="Left"
                                 VerticalAlignment="Center"
                                 TextWrapping="Wrap"
                                 TextTrimming="CharacterEllipsis"/>
                    </StackPanel>
                    <StackPanel Grid.Column="1"
                                Orientation="Horizontal"
                                VerticalAlignment="Center"
                                Spacing="6"
                                Height="80">
                      <TextBlock VerticalAlignment="Center" Text="Net Price:"/>
                      <TextBlock VerticalAlignment="Center"
                                 Text="{Binding DefaultPrice, StringFormat=0.00}"
                                 Classes="bold"
                                 HorizontalAlignment="Right"
                                 Margin="0 0 5 0"/>
                    </StackPanel>
                  </Grid>
                </Border>
              </DataTemplate>
            </ListBox.ItemTemplate>
          </ListBox>
        </ScrollViewer>

        <Button Grid.Row="2"
                Command="{Binding AddInvoiceItemCommand}"
                Background="#EEEEEE"
                Height="50"
                Margin="0,10,0,0"
                HorizontalAlignment="Center">
          <TextBlock VerticalAlignment="Center"
                     TextAlignment="Center"
                     FontWeight="Bold">
            Add Service to Invoice
          </TextBlock>
        </Button>
      </Grid>
    </Border>
  </Grid>
</UserControl>
