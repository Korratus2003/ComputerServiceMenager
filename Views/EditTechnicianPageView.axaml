<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:ComputerServiceManager.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="ComputerServiceManager.Views.EditTechnicianPageView"
             x:DataType="vm:EditTechnicianPageViewModel">

    <UserControl.Styles>
        <Style Selector="TextBox">
            <Setter Property="CornerRadius" Value="10"></Setter>
        </Style>
        <Style Selector="TextBox:focus /template/ Border">
            <Setter Property="BorderBrush" Value="Red"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="10"/>
        </Style>
        <Style Selector="Button:pressed /template/ ContentPresenter">
            <Setter Property="BoxShadow" Value="0 0 1 white"></Setter>
        </Style>
    </UserControl.Styles>
    
    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" >
    <Border CornerRadius="20"  Background="#FC5130" BoxShadow="0 0 20 black" Padding="20" >
        <StackPanel VerticalAlignment="Center" >
            <StackPanel HorizontalAlignment="Left">
                <TextBlock Text="Edit Technician" FontSize="20" FontWeight="Bold" Margin="0,0,0,20" />
                
                <TextBlock Text="NAME:" />
                <TextBox Width="300" Text="{Binding Technician.Name}" />

                <TextBlock Text="SURNAME:" Margin="0,10,0,0" />
                <TextBox Width="300" Text="{Binding Technician.Surname}" />

                <TextBlock Text="PHONE NUMNBER" Margin="0,10,0,0" />
                <TextBox Width="300" Text="{Binding Technician.PhoneNumber}" />

                <TextBlock Text="EMPLOYMENT DATE:" Margin="0,10,0,0" />
                <DatePicker Width="300" SelectedDate="{Binding Technician.EmploymentDate}" />
                
                <TextBlock Text="IMAGE URL:" />
                <TextBox Width="300" Text="{Binding Technician.ImageUrl}" />
                
                <StackPanel Margin="0 10 0 0" Orientation="Horizontal" Spacing="10">
                    <TextBlock Text="IS EMPLOYED:" VerticalAlignment="Center"/>
                    <CheckBox IsChecked="{Binding Technician.IsActive}" VerticalAlignment="Center"/>
                </StackPanel>
                <TextBlock Margin="10" HorizontalAlignment="Center" Text="{Binding Error}" FontWeight="Bold" />
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Command="{Binding SaveCommand}"  Width="100" HorizontalAlignment="Center" Margin="10" CornerRadius="15" FontWeight="Bold" Background="#FFFAFF" Cursor="Hand"><TextBlock Text="SAVE" HorizontalAlignment="Center" Margin="10"/></Button>
                    <Button Command="{Binding CancelCommand}"  Width="100" HorizontalAlignment="Center" Margin="10" CornerRadius="15" FontWeight="Bold" Background="#FFFAFF" Cursor="Hand"><TextBlock Text="CANCEL" HorizontalAlignment="Center" Margin="10"/></Button>
                </StackPanel>
            </StackPanel>
        </StackPanel>
    </Border>
    </StackPanel>
</UserControl>